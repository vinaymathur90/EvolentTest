@if (Model != null && Model.Count() > 0)
{
    <table id="myTable" width="80%">
        <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Status</th>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                @if (item.Status == true)
                {
                    <td><input type="checkbox" checked="checked" /></td>
                }
                else
                {
                    <td><input type="checkbox" /></td>
                }
                <td><a href="~/Contact/Edit/?Id=@item.Id">Edit</a></td>
                <td><a href="~/Contact/Delete/?Id=@item.Id">Delete</a></td>
                @*<td>@item.Status</td>*@

